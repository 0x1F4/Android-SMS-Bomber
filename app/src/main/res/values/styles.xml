<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Tile" parent="android:Widget">
        <item name="android:background">@drawable/toggle_tile</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ToggleTile" parent="Tile">
        <item name="android:backgroundTint">@color/color_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:paddingTop">18dp</item>
        <item name="drawableTint">@color/icon_color</item>
    </style>

    <style name="ActionTile" parent="Tile">
        <item name="drawableTint">?colorControlNormal</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>
</resources>